<resources>
    <!-- Window transition animations -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Pill button style for Logout or menu buttons -->
    <style name="PillButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/menu_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">56dp</item>
        <!-- corner radius for Material3 button -->
        <item name="cornerRadius">28dp</item>
    </style>

    <!-- Rounded input field style -->
    <style name="RoundedInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <!-- Style for white outlined text fields on a dark background -->
    <style name="WhiteOutlinedTextInputLayout" parent="RoundedInputStyle">
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="passwordToggleTint">@android:color/white</item>
    </style>
</resources>
